-- Create the ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "DeathXWallhackGui"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a Frame for the GUI
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.3, 0, 0.2, 0)
frame.Position = UDim2.new(0.35, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Parent = screenGui
frame.Active = true
frame.Draggable = true  -- Make the frame draggable

-- Create a TextLabel for the title
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.3, 0)
titleLabel.Text = "DEATHX WALLHACK"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.BackgroundTransparency = 1
titleLabel.Parent = frame

-- Create a button to enable wallhack
local wallhackButton = Instance.new("TextButton")
wallhackButton.Size = UDim2.new(1, 0, 0.35, 0)
wallhackButton.Position = UDim2.new(0, 0, 0.3, 0)
wallhackButton.Text = "Enable Wallhack"
wallhackButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
wallhackButton.Parent = frame

-- Create a button to disable wallhack
local disableButton = Instance.new("TextButton")
disableButton.Size = UDim2.new(1, 0, 0.35, 0)
disableButton.Position = UDim2.new(0, 0, 0.65, 0)
disableButton.Text = "Disable Wallhack"
disableButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
disableButton.Parent = frame

-- Variables for noclip
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local noclip = false

-- Function to enable noclip
local function enableNoclip()
    noclip = true
    char.Humanoid:ChangeState(Enum.HumanoidStateType.Physics) -- Avoid falling
    while noclip do
        wait()
        for _, part in pairs(char:GetChildren()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end
end

-- Function to disable noclip
local function disableNoclip()
    noclip = false
    for _, part in pairs(char:GetChildren()) do
        if part:IsA("BasePart") then
            part.CanCollide = true
        end
    end
end

-- Connect button actions
wallhackButton.MouseButton1Click:Connect(function()
    enableNoclip()
    wallhackButton.Text = "Wallhack Active"
end)

disableButton.MouseButton1Click:Connect(function()
    disableNoclip()
    wallhackButton.Text = "Enable Wallhack"
end)
